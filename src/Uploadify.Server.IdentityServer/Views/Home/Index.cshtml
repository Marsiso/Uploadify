@{
    Layout = "_Layout";
    ViewData["Title"] = "Homepage";
}

<form asp-controller="Authentication" asp-action="HandleLogout" method="post" asp-antiforgery="true" novalidate>
    <div class="grid-container">
        <div class="grid-x grid-padding-x">
            <div class="small-12 cell">
                @await Html.PartialAsync("_Logo")
            </div>
            @if (User is { Identity.IsAuthenticated: true })
            {
                <div class="small-12 cell">
                    <h1 class="text-center">Hello, @User.Identity.Name</h1>
                </div>
                <div class="small-12 cell table-scroll" style="margin-bottom: 2rem;">
                    <table class="hover unstriped stack">
                        <tbody>
                        @foreach (var claim in User.Claims)
                        {
                            <tr>
                                <td>@claim.Type</td>
                                <td>@claim.Value</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <div class="small-12 cell">
                    <button type="submit" class="button expanded">Sign out</button>
                </div>
            }
            else
            {
                <div class="small-12 cell" style="margin-bottom: 7.5rem;">
                    <h1 class="text-center">Welcome</h1>
                </div>
                <div class="small-12 cell">
                    <a asp-controller="Authentication" asp-action="Login" class="button expanded">Sign in</a>
                    <a asp-controller="Authentication" asp-action="Register" class="button secondary expanded">Sign up</a>
                </div>
            }
        </div>
    </div>
</form>
