@using Uploadify.Authorization.Models

@attribute [Permission]
@attribute [Route(PageRoutes.Management)]

@inject IStringLocalizer<TranslationDictionary> Localizer

<PageTitle>@Localizer[Translations.Pages.Management.Title]</PageTitle>
<MudText Typo="Typo.h1">@Localizer[Translations.Pages.Management.Title]</MudText>
<MudText Typo="Typo.body1" Class="mt-4">@Localizer[Translations.Pages.Management.Description]</MudText>
<MudTabs Rounded="true" Color="Color.Dark" Class="mt-8">
    <PermissionView Permission="Permission.ViewUsers">
        <Authorized>
            <MudTabPanel Text="@Localizer[Translations.Pages.Management.UsersLabel]" Icon="@Icons.Material.Rounded.PeopleAlt">
                <ChildContent>
                    <MudText Typo="Typo.body1" Class="mt-4">@Localizer[Translations.Pages.Management.UsersDescription]</MudText>
                </ChildContent>
            </MudTabPanel>
        </Authorized>
        <NotAuthorized>
            <MudTabPanel Text="@Localizer[Translations.Pages.Management.UsersLabel]" Icon="@Icons.Material.Rounded.PeopleAlt" Disabled="true"/>
        </NotAuthorized>
    </PermissionView>
    <PermissionView Permission="Permission.ViewRoles">
        <Authorized>
            <MudTabPanel Text="@Localizer[Translations.Pages.Management.PermissionsLabel]" Icon="@Icons.Material.Rounded.AdminPanelSettings">
                <ChildContent>
                    <MudText Typo="Typo.body1" Class="mt-4">@Localizer[Translations.Pages.Management.PermissionsDescription]</MudText>
                </ChildContent>
            </MudTabPanel>
        </Authorized>
        <NotAuthorized>
            <MudTabPanel Text="@Localizer[Translations.Pages.Management.PermissionsLabel]" Icon="@Icons.Material.Rounded.AdminPanelSettings" Disabled="true"/>
        </NotAuthorized>
    </PermissionView>
</MudTabs>
